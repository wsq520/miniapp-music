.nav {
    display: flex;
    height: 44px;
    color: #fff;
}

.left, .right, .center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav .left, .nav .right {
    width: 120rpx;
}

.nav .center {
    flex: 1;
}

.default {
    display: none;
}

.slot:empty + .default {
    display: flex;
}